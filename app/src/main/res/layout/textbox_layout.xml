<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            style="@style/BackgroundImage"
            android:src="@drawable/background" />

        <LinearLayout
            style="@style/LinearLayoutVertical"
            android:paddingBottom="@dimen/score_padding">

            <LinearLayout style="@style/LinearLayoutHorizontal">

                <TextView
                    style="@style/ScoreStyle"
                    android:text="@string/score_textview" />

                <TextView
                    android:id="@+id/score_id"
                    style="@style/ScoreStyle" />
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayoutVertical"
                android:background="@color/background_color">

                <TextView
                    android:id="@+id/question_number_id"
                    style="@style/ScoreStyle" />

                <TextView
                    android:id="@+id/question_id"
                    style="@style/QuestionStyle" />
            </LinearLayout>

            <EditText
                android:id="@+id/answer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/edittext_margin_bottom"
                android:hint="@string/enter_answer"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/edittext_text_size"
                android:textStyle="italic" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/icon_padding"
            android:paddingTop="@dimen/icon_padding"
            android:src="@drawable/book" />

        <Button
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/question_button_margin_bottom"
            android:onClick="submitAnswer"
            android:text="@string/submit_answer" />
    </RelativeLayout>
</ScrollView>
